{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "decorators/*": ["decorators/*"],
      "interfaces/*": ["interfaces/*"],
      "orders/*": ["orders/*"],
      "photos/*": ["photos/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es6",
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
